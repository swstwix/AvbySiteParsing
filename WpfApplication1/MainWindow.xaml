<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        <Menu IsMainMenu="True" DockPanel.Dock="Top">
            <MenuItem Header="Автомобили">
                <MenuItem Header="Добавить" Name="AddCarMenuItem" Click="AddCarMenuItem_OnClick" />
                <MenuItem Header="Удалить"></MenuItem>
            </MenuItem>
        </Menu>
        <StackPanel DockPanel.Dock="Left" Width="151">
            <Label Content="Отслеживаемые авто:"></Label>
            <ListBox Name="EyedModels" SelectionChanged="EyedModels_OnSelectionChanged"></ListBox>
        </StackPanel>
        <DockPanel DockPanel.Dock="Right">
            <ListBox Name="SellingCars" DockPanel.Dock="Left" Width="201" ></ListBox>
            <Grid DockPanel.Dock="Right"></Grid>
        </DockPanel>
    </DockPanel>
</Window>